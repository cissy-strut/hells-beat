<div class="mycard">
<h2>S'inscrire</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :photo,
                as: :file,
                required: true %>

    <%= f.input :nickname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nickname" }%>

    <%= f.input :city,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "city" }%>


    <%= f.input :instrument,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "instrument" }%>

    <%= f.input :bio,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "bio" }%>

    <%= f.input :experience,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "experience" }%>

    <%= f.input :style,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "style" }%>

    <%= f.input :birth_date,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "birth_date" }%>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
