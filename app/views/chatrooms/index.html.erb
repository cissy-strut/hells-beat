<div class="headmessage">
  <h1> Messages </h1>
  <div class="backbtn333">
    <%= link_to matchings_path do %>
    <%= image_tag "backblack.png", alt: "back" %>
    <% end %>
  </div>
</div>

<div class="matchencours">
  <p>CONNEXIONS</p>
  <div class="flexy">
    <% @matchings_with_user_ref.each do |matching| %>
      <div class="flexlink">
        <%= link_to chatroom_path(matching.chatroom.id) do %>
          <div class="fleximg">
            <%= cl_image_tag User.find(matching.user_two_id).photo.key%>
          </div>
        <% end %>
      </div>
    <% end %>
    <% @matchings_with_other_user.each do |matching| %>
      <div class="flexlink">
        <%= link_to chatroom_path(matching.chatroom.id) do %>
          <div class="fleximg">
            <%= cl_image_tag User.find(matching.user_id).photo.key%>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="messagesencours">

  <p>MESSAGES</p>

    <% @matchings_with_user_ref.each do |matching| %>
      <div class="linkchat">
        <%= link_to chatroom_path(matching.chatroom.id) do %>
          <div class="dialchat">
            <%= cl_image_tag User.find(matching.user_two_id).photo.key%>
            <div class="insidec">
              <strong><%= matching.second_associated_user.nickname.upcase %></strong>,

              <p id="dede"><%= matching.second_associated_user.city %> <%= matching.second_associated_user.instrument.capitalize %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% @matchings_with_other_user.each do |matching| %>
      <div class="linkchat">
        <%= link_to chatroom_path(matching.chatroom.id) do %>
          <div class="dialchat">
            <%= cl_image_tag User.find(matching.user_id).photo.key%>
            <div class="insidec">
              <strong><%= matching.first_associated_user.nickname.upcase %>,</strong>
              <p id="dede"><%= matching.first_associated_user.city %>, <%= matching.first_associated_user.instrument.capitalize %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
